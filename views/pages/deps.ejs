<div class="row">
  <div class="col">
    <table class="table table-striped table-dark">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Departamento</th>
          <th scope="col">Zika</th>
          <th scope="col">Dengue</th>
        </tr>
      </thead>
      <tbody>
        <% deps.map((dep, key) => { %>
          <tr>
            <th scope="row"><%= key+1 %></th>
              <td>
                <a>
                  <%= dep %>
                </a>
              </td>
            <td>
              <span class="badge badge-primary badge-pill">
                0 casos
              </span>
            </td>
            <td>
              <span class="badge badge-warning badge-pill">
                0 casos
              </span>
            </td>
          </tr>
        <% }) %> 
      </tbody>
    </table>
  </div>

  <div class="col">
    <!-- Some text here -->
    <div>
      <h1>Total Dengue:  </h1>
      <h1>Total Zika: </h1>
      <h1>Total provincias afectadas: </h1>
    </div>
    <div class="chart-container" style="position: relative; height:20vh; width:20vw">
      <canvas id="myChart"></canvas>
    </div>
  </div>
</div>

<script>
  const data = {
    labels: [
      'Buenos Aires',
    ],
    datasets: [{
      label: 'My First Dataset',
      data: [153],
      backgroundColor: [
        'rgb(255, 99, 132)'
      ],
      hoverOffset: 4
    }]
  };
  var ctx = document.getElementById('myChart').getContext('2d');
  var myChart = new Chart(ctx, {
      type: 'doughnut',
      data: data,
      options: {
          scales: {
              y: {
                  beginAtZero: true
              }
          }
      }
  });
  </script>