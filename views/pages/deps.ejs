<div class="row">
  <div class="col">
    <table class="table table-striped table-dark">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Departamento</th>
          <th scope="col">Zika</th>
          <th scope="col">Dengue</th>
        </tr>
      </thead>
      <tbody>
        <% deps.map((item, key) => { %>
          <tr>
            <th scope="row"><%= key+1 %></th>
              <td>
                <a>
                  <%= item.dep %>
                </a>
              </td>
            <td>
              <span class="badge badge-primary badge-pill">
                <%= item.zikaCases ? item.zikaCases : 0 %> 
                <%= (item.zikaCases ? item.zikaCases : 0) == 1 ? 'CASO' : 'CASOS' %>
              </span>
            </td>
            <td>
              <span class="badge badge-warning badge-pill">
                <%= item.dengueCases ? item.dengueCases : 0 %> 
                <%= (item.dengueCases ? item.dengueCases : 0) == 1 ? 'CASO' : 'CASOS' %>
              </span>
            </td>
          </tr>
        <% }) %> 
      </tbody>
    </table>
  </div>

  <div class="col">
    <!-- Some text here -->
    <div>
      <h1>Provincia: <%= prov %>  </h1>
      <h1>Total Dengue:  </h1>
      <h1>Total Zika: </h1>
    </div>
    <div class="chart-container" style="position: relative; height:20vh; width:20vw">
      <canvas id="myChart"></canvas>
    </div>
  </div>
</div>

<script>
const data = {
  labels: [
    'Buenos Aires', 'Salta'
  ],
  datasets: [{
    label: 'My First Dataset',
    data: [153, 20],
    backgroundColor: [
      'rgb(255, 99, 132)'
    ],
    hoverOffset: 4
  }]
};
var ctx = document.getElementById('myChart').getContext('2d');
var myChart = new Chart(ctx, {
  type: 'doughnut',
  data: data,
  options: {
    scales: {
      y: {
          beginAtZero: true
      }
    }
  }
});
</script>