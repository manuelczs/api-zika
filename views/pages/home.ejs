<div class="row">
  <div class="col">
    <table class="table table-striped table-dark">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Provincia</th>
          <th scope="col">Zika</th>
          <th scope="col">Dengue</th>
        </tr>
      </thead>
      <tbody>
        <% provsWithDengueAndZika.map((prov, key) => { %>
          <tr>
            <th scope="row"><%= key+1 %></th>
              <td>
                <a href="<%= prov.provincia %>/total_deps_dengue_zika" class="anchor-prov">
                  <%= prov.provincia %>
                </a>
              </td>
            <td>
              <span class="badge badge-primary badge-pill">
                <%= prov.totalZika ? prov.totalZika : 0 %> 
                <%= (prov.totalZika ? prov.totalZika : 0) == 1 ? 'CASO' : 'CASOS' %>
              </span>
            </td>
            <td>
              <span class="badge badge-warning badge-pill">
                <%= prov.totalDengue ? prov.totalDengue : 0 %> 
                <%= (prov.totalDengue ? prov.totalDengue : 0) == 1 ? 'CASO' : 'CASOS' %>
              </span>
            </td>
          </tr>
        <% }) %> 
      </tbody>
    </table>
  </div>

  <div class="col">
    <!-- Some text here -->
    <div>
      <h1>Total Dengue: <%= totalDengue %> </h1>
      <h1>Total Zika: <%= totalZika %> </h1>
      <h1>Total provincias afectadas: <%= allProvinces.length %> </h1>
    </div>
    <div class="chart-container" style="position: relative; height:20vh; width:20vw">
      <canvas id="myChart"></canvas>
    </div>
  </div>
</div>

<script>
const data = {
  labels: [
    'Buenos Aires',
    'CABA',
    'Chaco',
    'Cordoba'
  ],
  datasets: [{
    label: 'My First Dataset',
    data: [153, 111, 81],
    backgroundColor: [
      'rgb(255, 99, 132)',
      'rgb(54, 162, 235)',
      'rgb(255, 205, 86)',
      'rgb(255, 105, 16)'
    ],
    hoverOffset: 4
  }]
};
var ctx = document.getElementById('myChart').getContext('2d');
var myChart = new Chart(ctx, {
  type: 'doughnut',
  data: data,
  options: {
    scales: {
      y: {
        beginAtZero: true
      }
    }
  }
});
</script>