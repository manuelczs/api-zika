<div class="row">
  <div class="col">
    <table class="table table-striped table-dark">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Provincia</th>
          <th scope="col">Zika</th>
          <th scope="col">Dengue</th>
        </tr>
      </thead>
      <tbody>
        <% provsWithDengueAndZika.map((prov, key) => { %>
          <tr>
            <th scope="row"><%= key+1 %></th>
              <td>
                <a href="prov/<%= prov.provincia %>" class="anchor-prov">
                  <%= prov.provincia %>
                </a>
              </td>
            <td>
              <span class="badge badge-primary badge-pill">
                <%= prov.totalZika ? prov.totalZika : 0 %> 
                <%= (prov.totalZika ? prov.totalZika : 0) == 1 ? 'CASO' : 'CASOS' %>
              </span>
            </td>
            <td>
              <span class="badge badge-warning badge-pill">
                <%= prov.totalDengue ? prov.totalDengue : 0 %> 
                <%= (prov.totalDengue ? prov.totalDengue : 0) == 1 ? 'CASO' : 'CASOS' %>
              </span>
            </td>
          </tr>
        <% }) %> 
      </tbody>
    </table>
  </div>